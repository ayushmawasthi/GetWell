<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C0F1A1"
    tools:context=".DoctorHome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/linear_doctorhome"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:id="@+id/speciality_doctorhome"
            android:layout_margin="30dp"
            android:hint="Enter your area of specilization"/>

        <Button
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/location_doctorhome"
        android:text="Submit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp"
        android:visibility="gone"
        android:id="@+id/linear_loc">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Want to Update Location"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:id="@+id/btn_yes_loc_doc"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:text="No"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/btn_no_loc_doc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linear2_doctorhome"
        android:visibility="gone">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:id="@+id/listappoint_dochome">

        </ListView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Update Appointment"
            android:id="@+id/btn_make_appoint_doc"/>

    </LinearLayout>

</LinearLayout>